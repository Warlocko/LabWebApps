<main role="main" class="container">
  <div class="row">
    <div class="col-12">
      <h1>TODO List</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="input-group w-100">
        <input
          id="taskDescription"
          type="text"
          name="description"
          placeholder="I have to..."
          class="form-control">
        <div class="input-group-append">
          <input
            type="button"
            value="Add"
            class="btn btn-primary"
            onclick="storeTask();">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12" id="tasksList">
      {{#each tasks}}
      <div class="card my-3 {{#eq status 'done' }}bg-light{{/eq}}">
        <div class="card-body">
          <p class="card-text">{{ description }}</p>
          {{#eq status 'pending'}}
            <form action="/tasks/{{id}}/done" method="POST">
              <a href="javascript:;" onclick="parentNode.submit();" class="card-link">Done</a>
            </form>
          {{/eq}}
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</main>
